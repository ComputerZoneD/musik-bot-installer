function greenMessage {
    echo -e "\\033[32;1m${@}\033[0m"
}

function magentaMessage {
    echo -e "\\033[35;1m${@}\033[0m"
}

function cyanMessage {
    echo -e "\\033[36;1m${@}\033[0m"
}

function redMessage {
    echo -e "\\033[31;1m${@}\033[0m"
}

function yellowMessage {
	echo -e "\\033[33;1m${@}\033[0m"
}


clear
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' =
echo -e "Musikbot Install Script"
echo -e "By Blacktiger "
echo -e "Viel Spass"
printf '%*s\n' "${COLUMNS:-$(tput cols)}" '' | tr ' ' =
sleep 1
clear
redMessage "##########################################"
redMessage "-------------------------------------- 0%"
redMessage "##########################################"
sleep 1
greenMessage "Erst werden die Programme Installiert "
sleep 5
apt-get install x11vnc xvfb libxcursor1 ca-certificates bzip2 --force-yes 
update-ca-certificates 
apt-get install libglib2.0-0 curl
clear
redMessage "##########################################"
redMessage "###------------------------------------ 5%"
redMessage "##########################################"
sleep 1

greenMessage "User wird erstellt.... "
sleep 5
adduser sinusbot
mkdir -p /opt/ts3soundboard
cd /opt/ts3soundboard
clear
redMessage "##########################################"
redMessage "######-------------------------------- 10%"
redMessage "##########################################"
sleep 1

greenMessage "Der Bot wird Heruntergeladen"
sleep 5
curl -O https://www.sinusbot.com/pre/sinusbot-0.9.11-ee30ef7.tar.bz2
tar -xjf sinusbot-0.9.11-ee30ef7.tar.bz2
clear
redMessage "##########################################"
redMessage "########------------------------------ 15%"
redMessage "##########################################"
sleep 1
greenMessage "Bearbeite Datein"
sleep 5
cp config.ini.dist config.ini
chown -R sinusbot:sinusbot /opt/ts3soundboard
clear
redMessage "##########################################"
redMessage "#############------------------------- 25%"
redMessage "##########################################"
sleep 1

greenMessage "Installiere Teamspeak Client"
sleep 5
wget http://dl.4players.de/ts/releases/3.0.18.2/TeamSpeak3-Client-linux_amd64-3.0.18.2.run
chmod 0755 TeamSpeak3-Client-linux_amd64-3.0.18.2.run
./TeamSpeak3-Client-linux_amd64-3.0.18.2.run
cp plugin/libsoundbot_plugin.so /opt/ts3soundboard3/TeamSpeak3-Client-linux_amd64/plugins
clear
redMessage "##########################################"
redMessage "####################------------------ 55%"
redMessage "##########################################"
sleep 1

greenMessage "Setzte Rechte"
sleep 5
chmod 755 sinusbot
clear
redMessage "##########################################"
redMessage "########################-------------- 85%"
redMessage "##########################################"
sleep 1

greenMessage "Installiere das Startscript"
sleep 5
cd /etc/init.d
curl -O -s https://raw.githubusercontent.com/Blacktiger21/Musikbot-Installer-for-Ubuntu-und-Debian/master/sinusbot
sed -i 's/USER="mybotuser"/USER="'sinusbot'"/g' /etc/init.d/sinusbot
chmod +x /etc/init.d/sinusbot
update-rc.d sinusbot defaults >/dev/null 2>&1
/etc/init.d/sinusbot start
sleep 10
/etc/init.d/sinusbot start
clear
redMessage "##########################################"
redMessage "#################################----- 95%"
redMessage "##########################################"
sleep 1

greenMessage "Installiere Youtube-dl"
sleep 5
cd /usr/local/bin/
curl -O -s https://raw.githubusercontent.com/Blacktiger21/Musikbot-Installer-for-Ubuntu-und-Debian/master/youtube-dl
chmod 777 youtube-dl
sed -i 's/YoutubeDLPath = \"\"/YoutubeDLPath = \"\/usr\/local\/bin\/youtube-dl\"/g' /opt/ts3soundboard3/config.ini
sleep 10
clear
redMessage "##########################################"
redMessage "##################################### 100%"
redMessage "##########################################"
sleep 1

greenMessage "Das sind die Verwaltungs Befehle /etc/init.d/sinusbot {start|stop|status|restart|console|update|backup}"
sleep 5
greenMessage "Mit dem Befehl /etc/init.d/sinusbot start kannst du deinen musikbot starten"
redMessage "Zum Verlassen duecke Strg + C"

sleep 100

